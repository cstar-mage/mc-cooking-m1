    function positionTitles() {
        var blogTitle = jQuery('.blog-title p span');
        var blogTitleWidth = blogTitle.width();
        var heading = jQuery('.inner-heading').find('span').width();
        blogTitle.css({'margin-left':-((blogTitleWidth+90)/2)+'px'});
        jQuery('.inner-heading').find('span').css({'margin-left':-((heading+90)/2)+'px'});
    }
</script>
