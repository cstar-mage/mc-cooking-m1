<?php $items = $this->getItems(); ?>
<?php $itemsCount = $items->count(); ?>
<h2>Good morning!</h2>
<p>For your convenience, here is the list of customers who have signed up for today's class.</p>
<?php if($itemsCount > 0):?>
    <table cellspacing="0" cellpadding="0" border="0" width="100%" style="border:1px solid #EAEAEA;">
        <thead>
        <tr>
            <th align="left" bgcolor="#EAEAEA" style="font-size:13px; padding:3px 9px;"><?php echo $this->__('Class') ?></th>
            <th align="left" bgcolor="#EAEAEA" style="font-size:13px; padding:3px 9px"><?php echo $this->__('SKU') ?></th>
            <th align="left" bgcolor="#EAEAEA" style="font-size:13px; padding:3px 9px"><?php echo $this->__('Qty') ?></th>
            <th align="left" bgcolor="#EAEAEA" style="font-size:13px; padding:3px 9px"><?php echo $this->__('Order No.') ?></th>
            <th align="left" bgcolor="#EAEAEA" style="font-size:13px; padding:3px 9px"><?php echo $this->__('Customer') ?></th>
        </tr>
        </thead>
        <?php $i=0; foreach ($items as $_item): ?>
            <tbody<?php echo $i%2 ? ' bgcolor="#F6F6F6"' : '' ?>>
                <tr>
                    <td style="padding:3px 9px;">
                        <?php echo $_item->getName(); ?>
                    </td>
                    <td style="padding:3px 9px;">
                        <?php echo $_item->getSku(); ?>
                    </td>
                    <td style="padding:3px 9px;">
                        <?php $qtyOrdered =  intval($_item->getQtyOrdered()); ?>
                        <?php echo $qtyOrdered; ?>
                    </td>
                    <td style="padding:3px 9px;">
                        <?php echo $_item->getIncrementId(); ?>
                    </td>
                    <td style="padding:3px 9px;">
                        <?php echo $_item->getBillingName(); ?>
                    </td>

                </tr>
            </tbody>
        <?php endforeach; ?>
    </table>
<?php else: ?>
    <h3><?php echo $this->__('There are no ordered items'); ?></h3>
<?php endif; ?>
